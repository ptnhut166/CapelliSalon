<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAIRSTYLE FLASHBACK"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The best hairstyles of 2022 are all featured here"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">
    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="2dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lookbook_img1" />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Hairs"
        android:layout_gravity="center">
    </Button>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="2dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lookbook_img2" />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Hairs"
        android:layout_gravity="center">
    </Button>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="2dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lookbook_img3" />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colors"
        android:layout_gravity="center">
    </Button>
</LinearLayout>